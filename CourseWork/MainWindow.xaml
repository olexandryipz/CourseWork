<Window x:Class="WorldCountriesSearchSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="World Countries Search System" Height="450" Width="800">
    <Grid x:Name="SearchSystem">
        <TextBox x:Name="searchTextBox" Margin="0,10,0,0" HorizontalAlignment="Center" Width="276" Height="18" VerticalAlignment="Top"/>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="10,40,10,10">
            <StackPanel x:Name="resultStackPanel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600"/>
        </ScrollViewer>
        <TextBlock Text="Введіть назву країни:" FontFamily="Arial" FontSize="15" Margin="99,10,0,0" HorizontalAlignment="Left" Width="158" Height="24" VerticalAlignment="Top" />

    </Grid>
</Window>
